<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lighterBackground"
        tools:context=".ui.DetailFragment">

        <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
            android:id="@+id/movie_banner"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            tools:src="@drawable/me"
            app:layout_constraintTop_toTopOf="parent"
            app:siShape="@drawable/detail_iv_shape"
            app:siSquare="true" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/play_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/movie_banner"
            app:layout_constraintBottom_toBottomOf="@id/movie_banner"
            android:src="@android:drawable/ic_media_play" />

        <ImageButton
            android:id="@+id/send_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/play_btn"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/star_btn"
            app:layout_constraintVertical_chainStyle="spread_inside"
            android:layout_margin="8dp"
            android:src="@drawable/ic_share_black_24dp"
            android:background="@android:color/transparent" />

        <ImageButton
            android:id="@+id/star_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/play_btn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/send_btn"
            android:layout_margin="8dp"
            android:src="@drawable/ic_star_border_black_24dp"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/movie_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/send_btn"
            android:layout_marginTop="32dp"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Movie Name" />

        <TextView
            android:id="@+id/type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/type_txt"
            android:textColor="@color/subText"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/year"
            app:layout_constraintTop_toBottomOf="@id/movie_name"
            app:layout_constraintVertical_chainStyle="spread"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/year_txt"
            android:textColor="@color/subText"
            android:layout_margin="16dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/movie_name"
            app:layout_constraintLeft_toRightOf="@id/type"
            app:layout_constraintRight_toRightOf="parent"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/movie_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            tools:text="Movies"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/movie_year"
            app:layout_constraintTop_toBottomOf="@id/year"
            app:layout_constraintVertical_chainStyle="spread"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/movie_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="1998"
            android:textColor="@color/colorAccent"
            android:layout_margin="16dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/year"
            app:layout_constraintLeft_toRightOf="@id/movie_type"
            app:layout_constraintRight_toRightOf="parent"
            android:textAlignment="center"
            android:textStyle="bold" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>